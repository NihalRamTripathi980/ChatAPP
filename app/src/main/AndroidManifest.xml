<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nrtchatsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NRTChatsApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.ViewStory"
            android:exported="true" />
        <activity
            android:name=".Activities.ChatsActivity"
            android:exported="true" />
        <activity android:name=".Activities.profileActivity" />
        <activity
            android:name=".Activities.OTP_Activity"
            android:windowSoftInputMode="stateVisible">
            o
        </activity>
        <activity
            android:name=".Activities.phonenumberAuthActivity"
            android:windowSoftInputMode="stateVisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MainActivity" />
    </application>

</manifest>